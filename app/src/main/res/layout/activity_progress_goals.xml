<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#ffffff"
    android:backgroundTint="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">


    <View
        android:id="@+id/orangeBox"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/orange_bottom_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="150dp"
        android:text="Progress"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ðŸ”¥ SCROLL VIEW STARTS HERE -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/orangeBox"
        app:layout_constraintBottom_toTopOf="@id/navContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/upperNavContainer"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shadow_box"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orangeBox">

        <!-- 4 HORIZONTAL TAGS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_small_rectangle"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="6dp"
                android:text="Weight"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_small_rectangle"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="6dp"
                android:text="Workouts"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_small_rectangle"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="6dp"
                android:text="Nutrition"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_small_rectangle"
                android:backgroundTint="@color/orange"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="6dp"
                android:text="Goals"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/weightLossContainer"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/shadow_box"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginBottom="15dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="187dp">

        <!-- ROW FOR TITLE + RIGHT % -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- LEFT TITLE -->
            <TextView
                android:id="@+id/textTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight Loss Goal"
                android:textColor="#5261a1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- SPACE -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- RIGHT TOP % -->
            <TextView
                android:id="@+id/weightLossPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="67%"
                android:textColor="#5261a1"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- PROGRESS BAR -->
        <ProgressBar
            android:id="@+id/blueBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="12dp"
            android:max="2200"
            android:progress="2150"
            android:progressDrawable="@drawable/blue_loading_bar" />

        <!-- ROW: LEFT LOST | RIGHT TO GO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- LEFT: 4.5 kg lost -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5 kg lost"
                android:textSize="14sp" />

            <!-- SPACE TO PUSH RIGHT SIDE TEXT -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- RIGHT: 2.1 kg to go -->
            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.1 kg to go"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/muscleGainContainer"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/shadow_box"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        android:padding="20dp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="318dp">

        <!-- ROW FOR TITLE + RIGHT % -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- LEFT TITLE -->
            <TextView
                android:id="@+id/textTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muscle Gain Progress"
                android:textColor="#5261a1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- SPACE -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- RIGHT TOP % -->
            <TextView
                android:id="@+id/muscleGainPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85%"
                android:textColor="#5261a1"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- PROGRESS BAR -->
        <ProgressBar
            android:id="@+id/orangeBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="12dp"
            android:max="2200"
            android:progress="2150"
            android:progressDrawable="@drawable/loading_bar" />

        <!-- ROW: LEFT LOST | RIGHT TO GO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- LEFT: 4.5 kg lost -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Based on workout consistency"
                android:textSize="14sp" />

            <!-- SPACE TO PUSH RIGHT SIDE TEXT -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- RIGHT: 2.1 kg to go -->
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calorieIntakeContainer"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/shadow_box"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginBottom="15dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="404dp">

        <!-- ROW FOR TITLE + RIGHT % -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- LEFT TITLE -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calorie Intake Adherence
"
                android:textColor="#5261a1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- SPACE -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- RIGHT TOP % -->
            <TextView
                android:id="@+id/textTopKcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="92%

"
                android:textColor="#5261a1"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- PROGRESS BAR -->
        <ProgressBar
            android:id="@+id/calorieProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="12dp"
            android:max="2200"
            android:progress="2150"
            android:progressDrawable="@drawable/green_loading_bar" />

        <!-- ROW: LEFT LOST | RIGHT TO GO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- LEFT: 4.5 kg lost -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23/25 days on track this month"
                android:textSize="14sp" />

            <!-- SPACE TO PUSH RIGHT SIDE TEXT -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- RIGHT: 2.1 kg to go -->
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progressScoreContainer"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/shadow_box"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        android:padding="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="525dp">

        <!-- TOP LEFT TITLE -->
        <TextView
            android:id="@+id/progressTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overall Progress"
            android:textColor="#5261a1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- ROW: 8.2 + stars + excellent progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- LEFT SCORE -->
            <TextView
                android:id="@+id/textScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.2"
                android:textColor="#5261a1"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- SMALL SPACE -->
            <View
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <!-- RIGHT GROUP: stars first, then text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- STAR RATING ROW (FIRST) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/icon_star" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/icon_star" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/icon_star" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/icon_star" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/icon_star" />

                </LinearLayout>

                <!-- TEXT BELOW STARS -->
                <TextView
                    android:id="@+id/textProgressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Excellent progress!"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- UPPER NAV CONTAINER -->



    </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/navContainer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/orange_top_rounded"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- HOME -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/nav_item_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_home"
                app:tint="@drawable/nav_icon_tint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- WORKOUT -->
        <LinearLayout
            android:id="@+id/nav_workout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/nav_item_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_dumbell"
                app:tint="@drawable/nav_icon_tint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- NUTRITION -->
        <LinearLayout
            android:id="@+id/nav_nutrition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/nav_item_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_nutrition"
                app:tint="@drawable/nav_icon_tint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nutrition"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- PROGRESS -->
        <LinearLayout
            android:id="@+id/nav_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/nav_item_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_progress"
                app:tint="@drawable/nav_icon_tint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- PROFILE -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/nav_item_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_profile"
                app:tint="@drawable/nav_icon_tint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>