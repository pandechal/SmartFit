<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".HomeFragment">


    <View
        android:id="@+id/orangeBox"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/orange_bottom_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Welcome"
        android:textColor="#020204"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:text="Ralph"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />


    <LinearLayout
        android:id="@+id/allOverProgressContainer"
        android:layout_width="375dp"
        android:layout_height="145dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/edittext_border"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <!-- TOP ROW: Home Workouts (left) + Day 12 (right) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Home Workouts title (Left) -->

            <TextView
                android:id="@+id/homeWorkoutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Over Progress"
                android:textColor="@color/orange"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Day 12 (Right) -->
            <TextView
                android:id="@+id/dayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 12"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>


        <!-- VALUES ABOVE TEXT LABELS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="3000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="850g"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="500L"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- LOWER LABELS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="71dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="Calories"
                android:textSize="12sp" />

            <TextView
                android:layout_width="71dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="Protein"
                android:textSize="12sp" />

            <TextView
                android:layout_width="71dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="Water"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nextWorkoutContainer"
        android:layout_width="375dp"
        android:layout_height="130dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shadow_box"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allOverProgressContainer">

        <!-- MAIN ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- LEFT: DUMBBELL ICON -->
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/icon_build_muscle" />

            <!-- SPACING -->
            <View
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <!-- CENTER TEXT COLUMN -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- TITLE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Workout
"
                    android:textColor="#5261a1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- SUBTITLE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upper Body Strength
"
                    android:textSize="14sp" />

                <!-- TIME BOX -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_small_rectangle"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="30 min â€¢ 8 exercises"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- RIGHT: PLAY ICON -->
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icon_play" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/logMealContainer"
        android:layout_width="375dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shadow_box"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21">

        <!-- MAIN ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- LEFT: DUMBBELL ICON -->
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/icon_meal" />

            <!-- SPACING -->
            <View
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <!-- CENTER TEXT COLUMN -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- TITLE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Meal

"
                    android:textColor="#5261a1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- SUBTITLE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track your nutrition"
                    android:textSize="14sp" />

                <!-- TIME BOX -->

            </LinearLayout>

            <!-- RIGHT: PLAY ICON -->

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/coreStrengthContainer"
        android:layout_width="375dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shadow_box"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22">

        <!-- MAIN ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- LEFT: DUMBBELL ICON -->
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/icon_core_strength" />

            <!-- SPACING BETWEEN ICON AND TEXT -->
            <View
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <!-- CENTER TEXT COLUMN -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- TITLE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Core Strength"
                    android:textColor="#5261a1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- SUBTITLE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 min"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- RIGHT: ARROW ICON -->
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_right_arrow" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Quick Actions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextWorkoutContainer" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Recommended"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logMealContainer" />


</androidx.constraintlayout.widget.ConstraintLayout>