<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutFragment">

    <!-- ORANGE HEADER -->
    <View
        android:id="@+id/orangeBox"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/orange_bottom_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- WORKOUT TITLE -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="Workouts"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/orangeBox"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- SEARCH BAR -->
    <EditText
        android:id="@+id/searchWorkout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:hint="Search Workouts..."
        android:background="@drawable/edittext_border"
        android:paddingStart="16dp"
        android:paddingEnd="48dp"
        android:backgroundTint="#FED7AA"
        android:inputType="text"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SEARCH ICON -->
    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/icon_white_search"
        android:contentDescription="Search"
        app:layout_constraintEnd_toEndOf="@id/searchWorkout"
        app:layout_constraintBottom_toBottomOf="@id/searchWorkout"
        app:layout_constraintTop_toTopOf="@id/searchWorkout" />

    <!-- FILTER BUTTONS (ALL / UPPER / LOWER) -->
    <LinearLayout
        android:id="@+id/categoriesContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/searchWorkout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/categoryAll"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_small_rectangle"
            android:gravity="center"
            android:text="All"
            android:textSize="14sp"
            android:paddingHorizontal="8dp" />

        <TextView
            android:id="@+id/categoryUpper"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_small_rectangle"
            android:gravity="center"
            android:layout_marginStart="12dp"
            android:text="Upper Body"
            android:textSize="14sp"
            android:paddingHorizontal="8dp" />

        <TextView
            android:id="@+id/categoryLower"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_small_rectangle"
            android:gravity="center"
            android:text="Lower Body"
            android:textSize="14sp"
            android:paddingHorizontal="8dp" />

    </LinearLayout>

    <!-- POPULAR WORKOUTS TITLE (placed above RecyclerView) -->
    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:text="Popular Workouts"
        android:textColor="#5261a1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/categoriesContainer"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- RECYCLER VIEW FOR DYNAMIC WORKOUT LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workoutRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/textView19"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_workout_card" />

</androidx.constraintlayout.widget.ConstraintLayout>